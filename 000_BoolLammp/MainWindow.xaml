<Window
    x:Class="_000_BoolLammp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_000_BoolLammp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance {x:Type local:LampList}}"
    mc:Ignorable="d">
    <Window.Resources>
        <local:BoolInvConveter x:Key="boolInv" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <ItemsControl ItemsSource="{Binding BoolList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="20"
                        Height="20"
                        Margin="5"
                        Command="{Binding ToggleCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOn}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                        From="White"
                                                        To="Red"
                                                        Duration="0:0:0.3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                        From="Red"
                                                        To="White"
                                                        Duration="0:0:0.3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Grid.Column="1">
            <Button
                Height="40"
                Margin="10"
                Background="Yellow"
                Command="{Binding StartBlinkCommand}"
                Content="重置"
                IsEnabled="{Binding IsRun}" />
            <Button
                Height="40"
                Margin="10"
                Background="LightGreen"
                Command="{Binding StartBlinkCommand}"
                Content="启动"
                IsEnabled="{Binding IsRun, Converter={StaticResource boolInv}}" />
            <Button
                Height="40"
                Margin="10"
                Background="Red"
                Command="{Binding StopBlinkCommand}"
                Content="停止"
                IsEnabled="{Binding IsRun}" />

        </StackPanel>
    </Grid>
</Window>
