<Window
    x:Class="_000_BoolLammp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cov="clr-namespace:_000_BoolLammp.Helper.Conveter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_000_BoolLammp"
    xmlns:localExHelper="clr-namespace:_000_BoolLammp.Helper"
    xmlns:localType="clr-namespace:_000_BoolLammp.Helper.TypeDefine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance {x:Type local:MainViewModel}}"
    mc:Ignorable="d">
    <Window.Resources>
        <cov:BoolInvConveter x:Key="boolInv" />
        <cov:EnumDescriptionConverter x:Key="Ec" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" MinWidth="100" />
        </Grid.ColumnDefinitions>
        <ItemsControl ItemsSource="{Binding LampList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="20"
                        Height="20"
                        Margin="5"
                        Command="{Binding ToggleCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOn}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                        From="White"
                                                        To="Red"
                                                        Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                        From="Red"
                                                        To="White"
                                                        Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            ResizeDirection="Auto" />
        <StackPanel Grid.Column="2" Width="Auto">

            <DockPanel Margin="5">
                <Label Content="数量" />
                <TextBox Text="{Binding LampCount, StringFormat={}{0:F0}}" />
            </DockPanel>
            <Button
                Height="40"
                Margin="10"
                Background="Gray"
                Command="{Binding InitializeLampListCommand}"
                Content="初始化"
                IsEnabled="{Binding IsRun, Converter={StaticResource boolInv}}" />
            <Button
                Height="40"
                Margin="10"
                Background="Gray"
                Command="{Binding ClearLampListCommand}"
                Content="清空"
                IsEnabled="{Binding IsRun, Converter={StaticResource boolInv}}" />
            <Button
                Height="40"
                Margin="10"
                Background="Yellow"
                Command="{Binding ResetCommand}"
                Content="重置"
                IsEnabled="{Binding IsRun, Converter={StaticResource boolInv}}" />
            <DockPanel Margin="5">
                <Label Content="模式" />
                <ComboBox ItemsSource="{localExHelper:EnumBindingSource EnumType=localType:Mode}" SelectedItem="{Binding Mode}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource Ec}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>

            <DockPanel Margin="5">
                <Label Content="延时ms" />
                <TextBox Text="{Binding DelayTime, StringFormat={}{0:F0}}" />
            </DockPanel>

            <Button
                Height="40"
                Margin="10"
                Background="LightGreen"
                Command="{Binding StartCommand}"
                Content="启动"
                IsEnabled="{Binding IsRun, Converter={StaticResource boolInv}}" />
            <Button
                Height="40"
                Margin="10"
                Background="Red"
                Command="{Binding StopCommand}"
                Content="停止"
                IsEnabled="{Binding IsRun}" />

        </StackPanel>
    </Grid>
</Window>
